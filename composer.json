{
  "name": "softonic/test-php-template",
  "type": "library",
  "description" : "example test php template",
  "keywords": [],
  "license": "Apache-2.0",
  "homepage": "https://github.com/softonic/test-php-template",
  "support": {
    "issues": "https://github.com/softonic/test-php-template/issues"
  },
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "mockery/mockery": "^1.0",
    "friendsofphp/php-cs-fixer": "^2.4",
    "squizlabs/php_codesniffer": "^3",
    "rector/rector": "^0.11.20"
  },
  "autoload": {
    "psr-4": {
      "Softonic\\TestPhpTemplate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Softonic\\TestPhpTemplate\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@checkstyle",
      "@phpunit"
    ],
    "phpunit": "phpunit --coverage-text",
    "checkstyle": [
      "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes",
      "rector --dry-run"
    ],
    "fix-checkstyle": [
      "@php-cs-fixer",
      "@rector"
    ],
    "php-cs-fixer": "php-cs-fixer fix -v --diff --allow-risky=yes",
    "rector": "rector"
  }
}
